<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitHubRepros.StatusbarBehaviorRepro2"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="StatusbarBehaviorRepro2">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource Primary}" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <VerticalStackLayout Padding="30"
                         Spacing="10">

        <Label Text="StatusBarBehavior is set again!"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>
